service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {

      allow read: if true;

      allow create: if request.auth.uid == userId;

        match /studiedDecks/{deckId} {
          allow read: if true;
          allow create, update: if request.auth.uid == userId;

          match /cards/{cardId} {
            allow read: if true;
            allow create, update, delete: if request.auth.uid == userId;          
          }
        }

        match /studiedLists/{cardId} {
          allow read: if true;
          allow create, update, delete: if request.auth.uid == userId;
        }

    }

    match /decks/{deckId} {
      allow read: if true;

      allow create: if request.auth.uid == request.resource.data.creatorId;
      allow update: if request.auth.uid == resource.data.creatorId;

      match /cards/{cardId} {
        allow read: if true;
        allow create, update, delete: if request.auth.uid == get(/databases/$(database)/documents/decks/$(deckId)).data.creatorId;
      }

    }

    match /lists/{listId} {
      allow read: if true;

      allow create: if request.auth.uid == request.resource.data.creatorId;
      allow update: if request.auth.uid == resource.data.creatorId;

      match /concepts/{conceptId} {
        allow read: if true;
        allow create, update, delete: if request.auth.uid == get(/databases/$(database)/documents/lists/$(listId)).data.creatorId;
      }

    }
  }
}

