service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {

      allow read: if true;

      allow create: if request.auth.uid == userId;

        match /decks/{deckId} {
          allow read: if true;
          allow create, update: if request.auth.uid == userId;
        }
    }

    match /decks/{deckId} {
      allow read: if true;

      allow create, update: if request.auth.uid == request.resource.data.creatorId;

      match /cards/{cardId} {
        allow read: if true;
        allow create, update, delete: if request.auth.uid == get(/databases/$(database)/documents/decks/$(deckId)).data.creatorId;
      }

    }
  }
}

